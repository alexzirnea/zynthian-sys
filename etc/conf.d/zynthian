#!/sbin/openrc-run

name=$RC_SVCNAME
description="Zynthian User Interface"
supervisor="supervise-daemon"
command="/usr/bin/startx"
command_args="./zynthian.sh"
supervise_daemon_args=" -d #ZYNTHIAN_UI_DIR# -e ZYNTHIAN_CONFIG_DIR=\"#ZYNTHIAN_CONFIG_DIR#\""

depend() {
	after jack2 
	need jack2 
}

stop() {
	ebegin "Stopping $RC_SVCNAME"
	/bin/sleep 10
	eend $?
}
